<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="market-dbPU" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>ru.terra.market.db.entity.Product</class>
		<class>ru.terra.market.db.entity.Settings</class>
		<class>ru.terra.market.db.entity.User</class>
		<class>ru.terra.market.db.entity.Group</class>
		<class>ru.terra.market.db.entity.Photo</class>
		<shared-cache-mode>ALL</shared-cache-mode>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/market" />
			<property name="javax.persistence.jdbc.password" value="spending" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="spending" />
			<property name="eclipselink.jdbc.batch-writing" value="JDBC" />
		</properties>
	</persistence-unit>
</persistence>
